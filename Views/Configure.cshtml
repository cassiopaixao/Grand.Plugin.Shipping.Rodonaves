@model Grand.Plugin.Shipping.Rodonaves.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ShippingRodonaves" asp-action="Configure" method="post">
    <antiforgery-token />
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <admin-label asp-for="ApiUsername" />
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="ApiUsername" />
                </div>
            </div>
            <div class="form-group">
                <admin-label asp-for="ApiPassword" />
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="ApiPassword" />
                </div>
            </div>
        </div>
        <div class="form-action">
            <div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9">
                <input type="submit" name="save" class="btn-green" value="@T("Admin.Common.Save")" />
            </div>
        </div>
    </div>
</form>
