@model Grand.Plugin.Shipping.Rodonaves.Models.RodonavesSettingsModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ShippingRodonaves" asp-action="Configure" method="post">
    <antiforgery-token />
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <div class="col-md-3">
                    @T("Plugins.Shipping.Rodonaves.Fields.ApiUsername")
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ApiUsername)
                    @Html.ValidationMessageFor(model => model.ApiUsername)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @T("Plugins.Shipping.Rodonaves.Fields.ApiPassword")
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ApiPassword)
                    @Html.ValidationMessageFor(model => model.ApiPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @T("Plugins.Shipping.Rodonaves.Fields.CustomerTaxId")
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.CustomerTaxId)
                    @Html.ValidationMessageFor(model => model.CustomerTaxId)
                </div>
            </div>
        </div>
        <div class="form-action">
            <div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9">
                <input type="submit" name="save" class="btn-green" value="@T("Admin.Common.Save")" />
            </div>
        </div>
    </div>
</form>
